---
import { Image } from "astro:assets";
import folder from "../../assets/pages/folder.png";
import { nameToUpper } from "../../utils/nameToUpper";
interface Props {
  folderName: string;
  path: string;
}
const { folderName, path } = Astro.props;
---

<a href={path} class="grid text-center no-underline">
  <Image src={folder} alt="folder" class="h-12 w-16 justify-self-center" />
  <p
    class="overflow-hidden text-ellipsis whitespace-nowrap px-2 text-sm text-slate-200 md:text-lg"
  >
    {nameToUpper(folderName)}
  </p>
</a>
