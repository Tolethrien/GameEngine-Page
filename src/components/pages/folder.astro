---
import { Image } from "astro:assets";
import folder from "../../assets/pages/folder.png";
interface Props {
  folderName: string;
  path: string;
}
const { folderName, path } = Astro.props;
---

<a href={path} class="grid text-center no-underline">
  <Image src={folder} alt="folder" class="h-12 w-12 justify-self-center" />
  <p
    class="overflow-hidden text-ellipsis whitespace-nowrap px-2 text-lg text-slate-200"
  >
    {folderName}
  </p>
</a>
