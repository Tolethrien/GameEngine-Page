---
import Progress from "../pages/progressBar.astro";

interface Props {
  name: string;
  percent: number;
  status:
    | "On hold"
    | "In progress"
    | "Preplaning"
    | "not Started"
    | "Alpha"
    | "Beta"
    | "Ready";
}
const { name, percent, status } = Astro.props;
---

<div class="not-content flex items-center gap-4">
  <p><b>{name}:</b></p>
  <Progress percent={percent} trackClass="w-16 md:w-40" />
  <p><b>status</b>: {status}</p>
</div>
