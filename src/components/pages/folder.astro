---
import { Image } from "astro:assets";
import folder from "../../assets/pages/folder.png";
interface Props {
  folderName: string;
  path: string;
}
const { folderName, path } = Astro.props;
---

<div class="grid items-center justify-center gap-2">
  <a href={path} class="no-underline">
    <Image src={folder} alt="folder" class="h-12 w-16 justify-self-center" />
    <p class="text-lg text-slate-200">{folderName}</p>
  </a>
</div>
