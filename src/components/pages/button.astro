---
interface Props {
  link: string;
  name: string;
  arrow?: boolean;
  class?: string;
}
const { link, name, class: added, arrow } = Astro.props;
---

<a
  href={link}
  class={`w-36  text-slate-100 ${arrow ? "bg-button-arrow" : "bg-button-no-arrow"} bg-contain bg-no-repeat bg-center p-4 text-center no-underline ${added}`}
  >{name}</a
>
